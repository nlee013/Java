package com.score2;

import java.util.Scanner;

public class Score2 {

	int inwon;
	
	Ranking[] rk;
	
	Scanner sc = new Scanner(System.in);
	
	public void set() {
		do {
			System.out.print("인원수?: ");//3
			inwon = sc.nextInt();
			
		}while(inwon < 1 || inwon > 10);
		
		rk = new Ranking[inwon];
	}
	
	public void input() {
		
		String[] title = {"Korean","English","Mathematics"};
		
		for(int i = 0; i < inwon; i++) {
			
			rk[i] = new Ranking();
			
			System.out.print("Type your name: ");
			rk[i].name = sc.next();
			
			for(int j = 0; j < 3; j++) {//score
				
				System.out.print(title[j]);
				rk[i].score2[j] = sc.nextInt();
				rk[i].tot += rk[i].score2[j];	
			}
		}
	
	}
	
	private String judging(int score) {
		
		String str = "";
		

		switch(score) {
		
		case 100:
		
		case 90: 
		str = "수"; break;
		
		case 89:
		case 80: 
		str = "우"; break;
	
		case 79:
		case 70: 
		str = "미"; break;
		
		case 69:
		case 60: 
		str = "양"; break;
		
		case 59:
		case 50: 
		str = "가"; break;
					
		}
		return str;
	}
	
	public void print() {
		
		//judging();
		
		for(int i = 0; i < inwon; i++) {
			
			System.out.printf("%6s", rk[i].name);
			
			for(int j = 0; j < inwon; j++) {
				
				System.out.printf("%4d", rk[i].score2[j]);
				System.out.printf("%5s", rk[i].jug);
			}
			
			System.out.printf("%4d", rk[i].ave);
		}
		
		
	}
	
}


