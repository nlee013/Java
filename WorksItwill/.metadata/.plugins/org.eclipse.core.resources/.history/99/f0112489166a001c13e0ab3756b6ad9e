package com.score2;

import java.util.Scanner;

public class Score2 {

	int inwon;
	
	Ranking[] rk;
	
	Scanner sc = new Scanner(System.in);
	
	public void set() {
		do {
			System.out.print("인원수?: ");//3
			inwon = sc.nextInt();
			
		}while(inwon < 1 || inwon > 10);
		
		rk = new Ranking[inwon];
	}
	
	public void input() {
		
		String[] title = {"Korean","English","Mathematics"};
		
		for(int i = 0; i < inwon; i++) {
			
			rk[i] = new Ranking();
			
			System.out.print("Type your name: ");
			rk[i].name = sc.next();
			
			for(int j = 0; j < 3; j++) {//score
				
				System.out.print(title[j]);
				rk[i].score2[j] = sc.nextInt();
				rk[i].tot += rk[i].score2[j];	
			}
			rk[i].ave = rk[i].tot/3;	
		}
	
	}
	
	private String judging(int score) {
		
		String jud = "";
		

		switch(score) {
		
		case 100:
		case 90: 
		jud = "수"; break;
		
		case 80: 
		jud = "우"; break;

		case 70: 
		jud = "미"; break;
		
		case 60: 
		jud = "양"; break;
		
		default: 
		jud = "가"; break;
					
		}
		return jud;
	}
	
	public void print() {
		
		//judging();
		
		for(int i = 0; i < inwon; i++) {
			
			System.out.printf("%6s", rk[i].name);
			
			for(int j = 0; j < 3; j++) {
				
				System.out.printf("%4d (%4s)", rk[i].score2[j], judging(rk[i].score2[j]));
				
			}
			System.out.printf("%4d", rk[i].tot);
			System.out.printf("%4d", rk[i].ave);
		}
		
		
	}
	
}


