package com.score2;

import java.util.Scanner;

public class Score2 {

	int inwon;
	
	Ranking[] rk;
	
	Scanner sc = new Scanner(System.in);
	
	public void set() {
		do {
			System.out.print("ÀÎ¿ø¼ö?: ");//3
			inwon = sc.nextInt();
		}while(inwon < 1 || inwon > 10);
		
		rk = new Ranking[inwon];
	}
	
	public void input() {
		String[] title = {"Korean","English","Mathematics"};
		
		for(int i = 0; i < inwon; i++) {
			
			rk[i] = new Ranking();
			
			System.out.print("Type your name: ");
			rk[i].name = sc.next();
			
			for(int j = 0; j < 3; j++) {//score
				
				System.out.print(title[j]);
				rk[i].score2[j] = sc.nextInt();
				rk[i].tot += rk[i].score2[j];	
			}
		}
	
	}
	
	public void print() {
		
		for(int i = 0; i < inwon; i++) {
			
			System.out.printf("%s6", rk[i].name);
			
			for(int j = 0; j < inwon; j++) {
				
				System.out.printf("%4d", rk[i].score2[j]);
			}
			
			//System.out.println(rk[i].name + ":" + rk[i].tot);
		}
		
	}
	
}
