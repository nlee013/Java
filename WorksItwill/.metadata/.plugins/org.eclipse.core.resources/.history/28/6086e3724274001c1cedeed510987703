package com.day18;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;
import java.awt.event.WindowAdapter;
import java.awt.event.WindowEvent;

import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JMenu;
import javax.swing.JMenuBar;
import javax.swing.JMenuItem;

//Abstract Window Toolkit->Swing을 써서 Menu Bar에 Menu만들기

public class Test7day18 extends JFrame implements ActionListener{

	private static final long serialVersionUID = 1L;
	
	private JLabel lbl;
	
	
	public Test7day18() {
		
		lbl = new JLabel("Message", JLabel.CENTER);//(넣을 내용, 위치)
		add(lbl);
		
		//Add Menu 메뉴 추가
		JMenuBar bar = new JMenuBar();
		JMenu menu;
		JMenuItem mitem;
		
		menu = new JMenu("메세지 대화 상자");
		mitem = new JMenuItem("Message");//메세지
		menu.add(mitem);
		
		mitem = new JMenuItem("Type");//입력
		menu.add(mitem);
		
		mitem = new JMenuItem("Exit");//종료
		menu.add(mitem);
		
		
		addWindowListener(new WindowAdapter() {

			@Override
			public void windowClosing(WindowEvent e) {
				System.exit(0);
			}
		});

		setTitle("Chat box");//대화상자
		setSize(300, 300);
		setVisible(true);
		
	}

	public static void main(String[] args) {

	}

	@Override
	public void actionPerformed(ActionEvent e) {
	}

}
