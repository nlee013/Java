package com.score2;

public class Ranking {

	String name;

	int[] score2 = new int[3];
	
	private int rank;
	
	int tot;
	
	Score2 scr;
	
		public void set(int rank) {
			this.rank = rank;
		}
		
		public void ranking() {
			
			scr = new Score2();
			
			for(int i = 0; i < scr.inwon; i++) {
				
				rank = 1;
			}
			
			for(int i = 0; i < scr.inwon; i++) {
				
				for(int j = 0; j < scr.inwon; j++) {
					
					if(scr.rk[i].tot > scr.rk[j].tot) {
						scr.rk[j].rank++;
					}else if(scr.rk[i].tot < scr.rk[j].tot) {
						scr.rk[i].rank++;
					}
				}
				
			}
		}
		public void print() {
			
			for(int i = 0; i < scr.inwon; i++) {
				
				System.out.printf("%s6", scr.rk[i].name);
				
				for(int j = 0; j < scr.inwon; j++) {
					
					System.out.printf("%4d", scr.rk[i].score2[j]);
				}
				
				System.out.println(name + ":" + scr.rk[i] + rank);
			}
			
		}
}
