package com.day10assign;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Scanner;

class Result{//이곳은 바꾸지 말기 : 부모 class의 print를 사용하기
	
	public void print(String r) {
		
		System.out.println(r);
	}
}

class Calc extends Result{//자식 Calc 부모 Result
	
	String[] oper = {"+", "-", "*", "/"};
	private String str;
	private int pos, n1, n2, result, oper2;
	
	public Calc(int pos) throws IOException {
		
		super();
	
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

		System.out.println("수식 [3 + 5]?");
		String str = br.readLine();
		
		str = str.replaceAll("\\s", "");
		
		for(String op : oper) {
			
		pos = str.indexOf(op);
		this.pos = pos;
		}
	}
	
	public void Calcul() {
		
		this.n1 = n1;
		this.n2 = n2;
		this.oper2 = oper2;
		this.result = result;
		
		if(pos > -1) { 
			n1 = Integer.parseInt(str.substring(0, pos));
			n2 = Integer.parseInt(str.substring(pos + 1));
			
			result = 0;
			char oper2 = str.charAt(pos);
			
			switch(oper2) {
			case '+':
				result = n1 + n2; break;
			case '-':
				result = n1 - n2; break;
			case '*':
				result = n1 * n2; break;
			case '/':
				result = n1 / n2; break;
			}
			
		}
	}
	
	public void print() {
		
		System.out.printf("%d %c %d = %d", n1, oper2, n2, result);		
	}
}


public class Day10Q1 {

	public static void main(String[] args) throws IOException{

		Calc ob1 = new Calc(0);
		ob1.Calcul();
		String r = "";
		ob1.print(r);
		
		
	}

}
