package com.score2;

import java.util.Scanner;

public class Score2 {

	int inwon;
	
	Ranking[] rk;
	
	Scanner sc = new Scanner(System.in);
	
	public void set() {
		do {
			System.out.print("인원수?: ");//3
			inwon = sc.nextInt();
			
		}while(inwon < 1 || inwon > 10);
		
		rk = new Ranking[inwon];
	}
	
	public void input() {
		
		String[] title = {"Korean","English","Mathematics"};
		
		for(int i = 0; i < inwon; i++) {
			
			rk[i] = new Ranking();
			
			System.out.print("Type your name: ");
			rk[i].name = sc.next();
			
			for(int j = 0; j < 3; j++) {//score
				
				System.out.print(title[j]);
				rk[i].score2[j] = sc.nextInt();
				rk[i].tot += rk[i].score2[j];	
			}
		}
	
	}
	
	private void judging() {
		
		for(int i = 0; i < inwon; i++) {
			
			for(int j = 0; j < 3; j++) {
			
				if(rk[i].score2[j] >= 90 && rk[i].score2[j] <= 100 ) {
					
					rk[i].score2[j] = sc.nextInt();
					System.out.println("수");
					
				}else if(rk[i].score2[j] >= 80 && rk[i].score2[j] < 90) {
					
					rk[i].score2[j] = sc.nextInt();
					System.out.println("우");
					
				}else if(rk[i].score2[j] >= 70 && rk[i].score2[j] < 80){
					
					rk[i].score2[j] = sc.nextInt();
					System.out.println("미");
					
				}else if(rk[i].score2[j] >= 60 && rk[i].score2[j] < 70){
					
					rk[i].score2[j] = sc.nextInt();
					System.out.println("양");
					
				}else if(rk[i].score2[j] < 60){
					
					rk[i].score2[j] = sc.nextInt();
					System.out.println("가");
					
				}
		    }
		}
	}
	
	public void print() {
		
		//judging();
		
		for(int i = 0; i < inwon; i++) {
			
			System.out.printf("%s6", rk[i].name);
			
			for(int j = 0; j < inwon; j++) {
				
				System.out.printf("%4d %5s", rk[i].score2[j], rk[i].jug);
			}
			
			System.out.printf("%4d", rk[i].ave);
		}
		
		
	}
	
}


