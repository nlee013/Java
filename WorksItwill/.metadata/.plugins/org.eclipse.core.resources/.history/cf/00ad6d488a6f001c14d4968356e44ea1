				break;
			}
			
			
		}
		
	}

	@Override
	public void findHak() {//searchHak 비교
		
		System.out.println("Type 학번 you want to delete in here: ");
		String hak = sc.next();
		
		Iterator<String> it = hMap.keySet().iterator();
		
		while(it.hasNext()) {
			
			ScoreVO vo = hMap.get(hak);
		
			if(hMap.containsKey(hak)) {
			
				hMap.remove(hak);
				break;
			}
		}
	}

	@Override
	public void findName() {
		
		System.out.println("Type 학번 you want to delete in here: ");
		String hak = sc.next();
		
		Iterator<String> it = hMap.keySet().iterator();
		
		while(it.hasNext()) {
			
			ScoreVO vo = hMap.get(hak);
		
			if(hMap.containsKey(hak)) {
			
				hMap.put(hak, vo);
				break;
			}
		}
	} 

}
