package com.day10assign;

import java.util.Scanner;

class Result{//이곳은 바꾸지 말기 : 부모 class의 print를 사용하기
	
	public void print(String r) {
		
		System.out.println(r);
	}
}

class Calc extends Result{//자식 Calc 부모 Result
	
	String[] oper = {"+", "-", "*", "/"};
	private String str;
	private int pos;
	
	public Calc(int pos) {
		
		//super("");
	
		for(String op : oper) {
			
		pos = str.indexOf(op);
		this.pos = pos;
		}
	}
	
	public void Calcul() {
		
		if(pos > -1) { 
			int n1 = Integer.parseInt(str.substring(0, pos));
			int n2 = Integer.parseInt(str.substring(pos + 1));
			
			int result = 0;
			char oper2 = str.charAt(pos);
			
			switch(oper2) {
			case '+':
				result = n1 + n2; break;
			case '-':
				result = n1 - n2; break;
			case '*':
				result = n1 * n2; break;
			case '/':
				result = n1 / n2; break;
			}
		}
	}
}


public class Day10Q1 {

	public static void main(String[] args) {

		
	}

}
