package com.Fitness;

import java.util.Scanner;

public class Fitness {
	
	Scanner sc = new Scanner(System.in);
	Health[] ht;
	
	public void input() {
		
		ht = new Health[1];
		
		String[] title = {"Create new ID: ","Type your home address: "};
		String[] data = {"Type your height(cm): ", "Type your weight: " };
		
		System.out.print("Type your name: ");
		
		ht[0] = new Health();
		ht[0].name = sc.next();
		
		for(int i = 0; i < 2; i++) {
			
			System.out.print(title[i]);
			ht[i].info[i] = sc.next();
			
		}
		
		for(int i = 0; i < 2; i++) {
			
			System.out.print(data[i]);
			ht[i].height = sc.nextDouble();
			ht[i].weight = sc.nextDouble();
		}
	}
	
	public void bmiMeasure() {
		
		ht[0].bmi = ht[0].height/ht[0].weight*100;
		
	}
	
}
